
@{
    ViewBag.Title = "Customers";
}

<h2>@ViewBag.Title</h2>

@foreach (var book in ViewBag.Customers)
{
    <div class="panel-body">
        @Html.Label("Title", "Title:")
        <br />
        <p>@book.Title</p>
        @Html.Label("Author", "Author:")
        <br />
        <p>@book.Author</p>
        @using (Html.BeginForm(actionName: "Details", controllerName: "Book", method: FormMethod.Get, routeValues: new { id = book.Book_id }))
        {
            <button class="btn btn-primary m-2">Details</button>
        }
    </div>
}
