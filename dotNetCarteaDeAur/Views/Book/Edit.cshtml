@model dotNetCarteaDeAur.Models.Book
@{
    ViewBag.Title = "Edit book";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Book"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(b => b.Book_id)
    <br />

    @Html.Label("Title", "Book Title:")
    <br />
    @Html.EditorFor(b => b.Title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Author", "Author:")
    <br />
    @Html.Editor("Author", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Author, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Price", "Price:")
    <br />
    @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Price, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Isbn", "ISBN:")
    <br />
    @Html.Editor("ISBN", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.ISBN, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Publish_date", "Publish Date:")
    <br />
    @Html.Editor("Publish_date", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.PublishDate, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Quantity", "Quantity:")
    <br />
    @Html.Editor("Quantity", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Quantity, "", new { @class = "text-danger" })
    <br />

    @Html.Label("ImagePath", "Image Path:")
    <br />
    @Html.Editor("ImagePath", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.ImagePath, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
