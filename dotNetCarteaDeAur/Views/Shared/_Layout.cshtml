<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/overWrite.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <a class="navbar-brand" href="#">
            @Html.ActionLink("Golden Book", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link">@Html.ActionLink("Home", "Index", "Home")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("About", "About", "Home")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("Contact", "Contact", "Home")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">@Html.ActionLink("Shop", "Index", "Shop")</a>
                </li>

                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Database
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("Books", "Index", "Book")</a>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("Orders", "Index", "Order")</a>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("Customers", "Index", "Customers")</a>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("Publishers", "Index", "Publisher")</a>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("Publishers contact", "Index", "PubContact")</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("All users", "Index", "Users")</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item ml-5" href="#">@Html.ActionLink("All Database", "Index", "API")</a>
                            </div>
                        </li>
                    }
                }

            </ul>
            <ul class="navbar-nav mr-5">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Golden Book</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
