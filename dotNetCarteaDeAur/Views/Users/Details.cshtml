@model dotNetCarteaDeAur.Models.ApplicationUser
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
@Html.LabelFor(u => u.Email, "Email:")
<br />
@Html.DisplayFor(u => u.Email)
<br />
<br />
@Html.LabelFor(u => u.UserName, "Username:")
<br />
@Html.DisplayFor(u => u.UserName)
<br />
<br />
<label>Role:</label>
<p>@ViewBag.UserRole</p>

@using (Html.BeginForm(
    actionName: "Delete",
    controllerName: "Users",
    method: FormMethod.Post,
    routeValues: new { username = @Model.UserName }))
{
    <button class="btn btn-primary" type="submit"> Delete </button>
}